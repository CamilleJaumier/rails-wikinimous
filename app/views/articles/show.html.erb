<div class="article">
<h2><%= @article.title %></h2>
<%= link_to article_edit_path do %>
<i class="fa-solid fa-pen"></i>
<% end %>

<%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
<i class="fa-solid fa-trash-can"></i>
<% end %>

<hr />
<p><%= @article.content %></p>
</div>
